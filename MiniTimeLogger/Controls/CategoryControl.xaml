<UserControl x:Class="MiniTimeLogger.Controls.CategoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MiniTimeLogger.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source=".\DarkModeDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="{StaticResource Content_Border_DarkMode}"
                BorderThickness="2"
                Grid.Row="0">
            <Label x:Name="Label_ItemText"
                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                <Label.Style>
                    <Style TargetType="Label">
                        <Setter Property="Background" Value="{StaticResource Content_Background_DarkMode}"/>
                        <Setter Property="Foreground" Value="{StaticResource Content_Foreground_DarkMode}"/>
                        <Setter Property="Focusable" Value="False"/>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoveredContent_Background_DarkMode}"/>
                                <Setter Property="Foreground" Value="{StaticResource HoveredContent_Foreground_DarkMode}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
        </Border>

        <StackPanel x:Name="StackPanel_CategoryItems">

        </StackPanel>
    </Grid>
</UserControl>
