<Window x:Class="MiniTimeLogger.Windows.OrderSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniTimeLogger.Windows"
        mc:Ignorable="d"
        Title="OrderSelectionWindow" Height="450" Width="300">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Controls\DarkModeDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="{StaticResource Control_Background_DarkMode}">
        <ListBox x:Name="ListBox_Projects"
                 Grid.Row="1" Grid.RowSpan="1"
                 Background="{StaticResource Content_Background_DarkMode}"
                 Foreground="{StaticResource Content_Foreground_DarkMode}"
                 BorderBrush="{StaticResource Content_Border_DarkMode}"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
                 SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItem_DarkMode}">
        </ListBox>
    </Grid>
</Window>
